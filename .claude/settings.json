{
  "permissions": {
    "allow": [
      "Bash(rg:*)",
      "Bash(git add:*)",
      "Bash(xcrun devicectl list:*)",
      "WebFetch(domain:docs.expo.dev)",
      "WebFetch(domain:docs.expo.dev)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(sed:*)",
      "Bash(mv:*)",
      "Bash(npx tsc:*)",
      "Bash(gemini:*)",
      "Bash(npm run lint)",
      "mcp__context7__get-library-docs",
      "Bash(but --version)",
      "Bash(but --help)",
      "Bash(but:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npm test:*)",
      "Bash(git branch:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(git checkout:*)",
      "Bash(git diff:*)",
      "Bash(yarn test:*)",
      "Bash(gh issue:*)"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/start.js",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/stop.js",
            "timeout": 10
          }
        ]
      }
    ]
  }
}